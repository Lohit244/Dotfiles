#!/usr/bin/env bash

#dmenu
#choice=$(echo "Quit" | dmenu -l 2 -nb "#001514" -sb "#5B5F97" -h '24px' -fn 'CaskaydiaCove Nerd Font' -p 'Brightness(%): ')
choice=$(echo "Quit"| rofi -dmenu -p "Brightness(%): ")
# quit if quit
if [[ "$choice" == "Quit" ]]; then
    echo "Program Terminated." && exit 1
# change brightness
elif [ "$choice" ]; then
    ddcutil setvcp 10 "${choice}"
else
    echo "Program Terminated." && exit 1
fi
